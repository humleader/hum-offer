{
  "apps": [
    {
      "name": "offer-development",
      "script": "./server/server.js",
      "exec_mode": "fork",
      "max_memory_restart": "500M",
      "env": {
        "NODE_ENV": "development",
        "BLUEBIRD_WARNINGS": 0
      }
    },
    {
      "name": "offer-production",
      "script": "./server/server.js",
      "instances": "4",
      "exec_mode": "cluster",
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production",
        "BLUEBIRD_WARNINGS": 0
      }
    }
  ]
}
